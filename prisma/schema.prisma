// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Administrador {
  id        String    @id @default(uuid())
  nome      String
  email     String
  token     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Aluno {
  id        String           @id @default(uuid())
  nome      String
  email     String
  matricula Int
  curso     String
  projeto   Projeto          @relation(fields: [projetoId], references: [id])
  projetoId String
  telefone  String
  emailProfessor String
}

model Professor {
  id        String               @id @default(uuid())
  nome      String
  email     String
  matricula String
  curso     String
  token     String?
  projeto   Projeto              @relation(fields: [projetoId], references: [id])
  projetoId String
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model Projeto {
  id               String               @id @default(uuid())
  titulo           String
  areaConhecimento String
  escola           String
  status           Boolean
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  Aluno            Aluno[]
  Professor        Professor[]
}
